<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	
	<!-- Model declaration -->	
	<bean id="collaborator" class="com.novedia.talentmap.model.entity.Collaborator"/>
	
    <bean id="profile" class="com.novedia.talentmap.model.entity.Profile"/>
    
    <bean id="category" class="com.novedia.talentmap.model.entity.Category"/>
    
    <bean id="concept" class="com.novedia.talentmap.model.entity.Concept">
    	<property name="category" ref="category"/>
    </bean>
    
    <bean id="tool" class="com.novedia.talentmap.model.entity.Tool">
    	<property name="concept" ref="concept"/>
    </bean>
    
    <bean id="skill" class="com.novedia.talentmap.model.entity.Skill"/>
    
</beans>
