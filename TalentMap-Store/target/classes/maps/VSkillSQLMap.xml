<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="vskill">

    <typeAlias alias="vskill" type="com.novedia.talentmap.model.entity.VSkill"/> 

    <resultMap id="vskillResult" class="vskill">
    	<result property="category_name" column="CATEGORY_NAME"/>     
        <result property="concept_name"  column="CONCEPT_NAME"/>  
        <result property="tool_name"  column="TOOL_NAME"/>         
    </resultMap>
	
	<select id="getConceptByCategory" resultMap="vskillResult" parameterClass="String">
		SELECT * FROM VSKILL WHERE CATEGORY_NAME = #categoryName#
	</select>
	
	<select id="getSkillByTool" resultMap="vskillResult" parameterClass="String">
		SELECT * FROM VSKILL WHERE TOOL_NAME = #toolName#
	</select>
	
	<select id="getToolByConcept" resultMap="vskillResult" parameterClass="java.util.HashMap">
		SELECT * FROM VSKILL WHERE CATEGORY_NAME = #categoryName# AND CONCEPT_NAME = #conceptName#
	</select>			 

</sqlMap>