<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="category">

	<typeAlias alias="category"
		type="com.novedia.talentmap.model.entity.Category" />

	<resultMap id="categoryResult" class="category">
		<result property="id" column="CATEGORY_ID" />
		<result property="name" column="CATEGORY_NAME" />
	</resultMap>

	<select id="get" resultMap="categoryResult" parameterClass="Integer">
		SELECT * FROM CATEGORY WHERE CATEGORY_ID = #id#
	</select>

	<select id="getByName" resultMap="categoryResult"
		parameterClass="String">
		SELECT * FROM CATEGORY WHERE CATEGORY_NAME = #name#
	</select>

	<select id="getAll" resultMap="categoryResult">
		SELECT * FROM CATEGORY
	</select>

	<insert id="add" parameterClass="Category">

		<selectKey resultClass="Integer" keyProperty="id">
			SELECT NEXT
			VALUE FOR SEQCATEGORY FROM INFORMATION_SCHEMA.SYSTEM_SEQUENCES
			where
			SEQUENCE_NAME = 'SEQCATEGORY'
		</selectKey>

		INSERT INTO CATEGORY (
		CATEGORY_ID,
		CATEGORY_NAME
		)values (
		#id#,
		upper(#name#)
		)
	</insert>

	<update id="save" parameterClass="Category">
		UPDATE CATEGORY SET
		CATEGORY_NAME = #name# WHERE CATEGORY_ID = #id#
	</update>

	<delete id="delete" parameterClass="Category">
		DELETE FROM CATEGORY WHERE
		CATEGORY_ID = #id#
	</delete>

</sqlMap>