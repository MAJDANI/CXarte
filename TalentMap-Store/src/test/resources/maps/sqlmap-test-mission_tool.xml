<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="mission_tool">

	<typeAlias alias="mission_tool"
		type="com.novedia.talentmap.model.entity.MissionTool" />

	<resultMap id="missionToolResult" class="mission_tool">
		<result property="missionId" column="MISSION_ID" />
		<result property="toolId" column="TOOL_ID" />
	</resultMap>

	<insert id="add" parameterClass="mission_tool">

		INSERT INTO MISSION_TOOL
		(MISSION_ID,TOOL_ID)
		values
		(#missionId#, #toolId#)

	</insert>

	<delete id="delete" parameterClass="Integer">
		DELETE FROM MISSION_TOOL
		WHERE MISSION_ID = #id#
	</delete>

</sqlMap>