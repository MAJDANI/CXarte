<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="vskillCollab">

    <typeAlias alias="vskillCollab" type="com.novedia.talentmap.model.entity.VSkillCollab"/> 

    <resultMap id="vskillCollabResult" class="vskillCollab">
    <result property="collab_id" column="COLLEAGUE_ID"/>
    	<result property="category_name" column="CATEGORY_NAME"/>     
        <result property="concept_name"  column="CONCEPT_NAME"/>  
        <result property="tool_name"  column="TOOL_NAME"/>         
    </resultMap>
	
	<select id="getAllSkillCollab" resultMap="vskillCollabResult" parameterClass="Integer">
		SELECT * FROM VSKILL_COLLAB WHERE COLLEAGUE_ID = #collab_id#
	</select>		 

</sqlMap>