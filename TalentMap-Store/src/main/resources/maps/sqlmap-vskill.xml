<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="vskill">

	<typeAlias alias="vskill" type="com.novedia.talentmap.model.entity.VSkill" />

	<resultMap id="vskillResult" class="vskill">
		<result property="categoryId" column="CATEGORY_ID" />
		<result property="categoryName" column="CATEGORY_NAME" />
		<result property="conceptId" column="CONCEPT_ID" />
		<result property="conceptName" column="CONCEPT_NAME" />
		<result property="toolId" column="TOOL_ID" />
		<result property="toolName" column="TOOL_NAME" />
	</resultMap>

	<select id="getAllVSkillOrdered" resultMap="vskillResult"
		parameterClass="String">
		SELECT * FROM VSKILL
		ORDER BY CATEGORY_NAME, CONCEPT_NAME, TOOL_NAME
	</select>

	<select id="getSkillByTool" resultMap="vskillResult"
		parameterClass="String">
		SELECT * FROM VSKILL WHERE TOOL_NAME = #toolName#
	</select>

</sqlMap>