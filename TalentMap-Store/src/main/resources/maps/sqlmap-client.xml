<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="client">

    <typeAlias alias="client" type="com.novedia.talentmap.model.entity.Client"/> 

    <resultMap id="clientResult" class="client">
        <result property="id" column="CLIENT_ID"/>     
        <result property="name"  column="CLIENT_NAME"/>         
    </resultMap>
    
    <select id="getAll" resultMap="clientResult">
    	SELECT * FROM CLIENT
    </select>
    
    
</sqlMap>        