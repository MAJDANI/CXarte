<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="mission">

	<typeAlias alias="mission" type="com.novedia.talentmap.model.entity.Mission" />

	<resultMap id="missionResult" class="mission">
		<result property="id" column="MISSION_ID" />
		<result property="colleagueId" column="COLLAB_ID" />
		<result property="name" column="NAME" />
		<result property="place" column="PLACE" />
		<result property="client" column="CLIENT" />
		<result property="notes" column="NOTES" jdbcType="String" />
		<result property="startDate" column="START_DATE" />
		<result property="endDate" column="END_DATE" />
	</resultMap>

	<select id="get" resultMap="missionResult" parameterClass="Integer">
		SELECT * FROM MISSION WHERE MISSION_ID = #id#
	</select>

	<select id="getAll" resultMap="missionResult" parameterClass="Integer">
		SELECT * FROM MISSION WHERE COLLAB_ID = #colleagueId# 
		ORDER BY START_DATE
	</select>
	
    <select id="getAllClientsName" resultClass="string">
     	SELECT DISTINCT client FROM MISSION
    </select>

	<update id="save" parameterClass="Mission">
		UPDATE MISSION 
		SET
		MISSION_ID = #id#, COLLAB_ID = #colleagueId#, NAME = #name#, PLACE = #place#, 
		CLIENT = #client#, NOTES = #notes#, START_DATE = #startDate#, END_DATE = #endDate# 
		WHERE MISSION_ID = #id#
	</update>

	<insert id="add" parameterClass="Mission">

		<selectKey resultClass="int" keyProperty="id">
			SELECT SEQMISSION.NEXTVAL FROM DUAL
		</selectKey>

		INSERT INTO MISSION 
		(MISSION_ID, COLLAB_ID, NAME, PLACE, CLIENT, NOTES, START_DATE, END_DATE) 
		values 
		(#id#, #colleagueId#, #name#, #place#, #client#, #notes#, #startDate#, #endDate#)

		<selectKey keyProperty="id" resultClass="Integer">
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
	</insert>

	<delete id="delete" parameterClass="Integer">
		DELETE MISSION WHERE MISSION_ID = #id#
	</delete>

</sqlMap>