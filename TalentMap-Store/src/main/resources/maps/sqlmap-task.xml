<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL MAP 2.0//EN" 
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="task">

    <typeAlias alias="task" type="com.novedia.talentmap.model.entity.Task"/>
    <resultMap id="taskResult" class="task">
    	<result property="id" column="TASK_ID"/> 
        <result property="name" column="NAME"/>     
        <result property="taskType"  column="TASK_TYPE"/>
        <result property="targetDate"  column="TARGET_DATE"/>  
        <result property="priority"  column="PRIORITY"/>
        <result property="effort" column="EFFORT"/>
    </resultMap>
    
    <select id="get" resultMap="taskResult" parameterClass="Integer">
    	SELECT * FROM TASK WHERE TASK_ID = #id#
    </select>
</sqlMap>
    