<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
                           
	<!-- Model beans declaration import -->
	<import resource="classpath:model-spring-context.xml"/>
	
	<!-- Import all configuration to connect with database -->
	<import resource="datasource.xml"/>
	
	<bean id="sqlMap"
          class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation">
            <value>classpath:SqlConfigMap.xml</value>
        </property>
        <property name="dataSource" ref="dataSource" />
    </bean>    
	
	<!--  Store beans declaration -->
	<bean id="Collaborator" class="com.novedia.talentmap.store.impl.CollaboratorDao">
		 <property name="sqlMap" ref="sqlMap" />
	</bean>


</beans>