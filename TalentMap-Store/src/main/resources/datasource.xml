	<!-- MySQL dataSource properties -->
	<bean id="dataSource" destroy-method="close"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="${mysql.talentmap.jdbc.driverClassName}" />
