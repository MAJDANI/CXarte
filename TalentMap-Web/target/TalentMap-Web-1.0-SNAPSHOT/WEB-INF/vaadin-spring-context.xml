<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- TalentMap Services import -->
    <import resource="classpath:services-spring-context.xml"/>
    
    <!-- Vaddin components declaration -->
	<bean id="windowBean" class="com.vaadin.ui.Window"/>
	<bean id="hLayoutBean" class="com.vaadin.ui.HorizontalLayout"/>
    
    <!-- Vaddin root application declaration -->    
    <bean id="vaadinBean" class="com.novedia.talentmap.web.MyVaadinApplication" scope="session">
    	<property name="window" ref="windowBean"/>
    	<property name="hLayout" ref="hLayoutBean" />
    	<property name="tabMain" ref="tabMain" />
    </bean>
    
    
<!-- Vaadin Components UI -->

    
    <!-- Vaadin CollaboratorForm UI -->
    
    <bean id="fieldOrderCollaborator" class="java.util.Vector"/>
    <bean id="fieldOrderMission" class="java.util.Vector"/>
	<bean id="gLayoutCollaborator" class="com.vaadin.ui.GridLayout"/>
	<bean id="gLayoutMission" class="com.vaadin.ui.GridLayout"/>
	<bean id="formCollaborator" class="com.vaadin.ui.Form"/>
	<bean id="formMission" class="com.vaadin.ui.Form"/>
	<bean id="vLayoutManager" class="com.vaadin.ui.VerticalLayout"/>
	<bean id="managerField" class="com.vaadin.ui.TextField"/>
	
    <bean id="collaboratorFormBean" class="com.novedia.talentmap.web.ui.profile.CollaboratorForm">
    	<constructor-arg name="collaboratorService" ref="collaboratorService"/>
    	<constructor-arg name="profileService" ref="profileService"/>
    	<constructor-arg name="fieldOrderCollaborator" ref="fieldOrderCollaborator"/>
    	<constructor-arg name="fieldOrderMission" ref="fieldOrderMission"/>
    	<constructor-arg name="gLayoutCollaborator" ref="gLayoutCollaborator" />
    	<constructor-arg name="gLayoutMission" ref="gLayoutMission" />
    	<constructor-arg name="formCollaborator" ref="formCollaborator" />
    	<constructor-arg name="formMission" ref="formMission" />
    	<constructor-arg name="vLayoutManager" ref="vLayoutManager" />
    	<constructor-arg name="managerField" ref="managerField" />
    </bean>
	
	
	<!-- Vaadin ListSkill UI -->
	
	<bean id="tableTools" class="com.vaadin.ui.Table" />
	<bean id="accCategory" class="com.vaadin.ui.Accordion"/>
	<bean id="accConcept" class="com.vaadin.ui.Accordion"/>
	
	<bean id="listSkillBean" class="com.novedia.talentmap.web.ui.profile.ListSkill" scope="session">
		<constructor-arg name="skillService" ref="skillService" />
		<constructor-arg name="tableTools" ref="tableTools" />
		<constructor-arg name="accCategory" ref="accCategory" />
		<constructor-arg name="accConcept" ref="accConcept" />
	</bean>
	
	
	<!-- Vaadin AddSkillWindow UI  -->
	
	<bean id="skillTab" class="com.vaadin.ui.Accordion"/>
	<bean id="categoryLabel" class="com.vaadin.ui.Label"/>
	<bean id="conceptLabel" class="com.vaadin.ui.Label"/>
	<bean id="toolSelect" class="com.vaadin.ui.Select"/>
	<bean id="frequencyUseSelect" class="com.vaadin.ui.Select"/>
	<bean id="noUsingTimeSelect" class="com.vaadin.ui.Select"/>
	<bean id="validSkill" class="com.vaadin.ui.Button" />
	<bean id="valueOptions" class="java.util.HashMap"/>
	<bean id="stars" class="org.vaadin.teemu.ratingstars.RatingStars"/>
	
	<bean id="addSkillPanelBean" class="com.novedia.talentmap.web.ui.profile.AddSkillPanel" scope="session">
		<constructor-arg name="skillTab" ref="skillTab"/>
		<constructor-arg name="skillService" ref="skillService" />
		<constructor-arg name="listSkill" ref="listSkillBean" />
		<constructor-arg name="categoryLabel" ref="categoryLabel" />
		<constructor-arg name="conceptLabel" ref="conceptLabel" />
		<constructor-arg name="frequencyUseSelect" ref="frequencyUseSelect" />
		<constructor-arg name="noUsingTimeSelect" ref="noUsingTimeSelect" />
		<constructor-arg name="toolSelect" ref="toolSelect" />
		<constructor-arg name="validSkill" ref="validSkill" />
		<constructor-arg name="valueOptions" ref="valueOptions" />
		<constructor-arg name="stars" ref="stars" />
	</bean>
	
	<!-- Vaadin ProfileView UI -->
	
	<bean id="save" class="com.vaadin.ui.Button" />
	<bean id="edit" class="com.vaadin.ui.Button" />
	<bean id="cancel" class="com.vaadin.ui.Button" />
	<bean id="addSkill" class="com.vaadin.ui.Button" />
	<bean id="skillPanel" class="com.vaadin.ui.Panel"/>
	<bean id="listSkillPanel" class="com.vaadin.ui.Panel"/>
	<bean id="skillLabel" class="com.vaadin.ui.Label"/>
	<bean id="bodyLayout" class="com.vaadin.ui.VerticalLayout"/>
	<bean id="footerLayout" class="com.vaadin.ui.HorizontalLayout"/>
	
	<bean id="profileViewBean" class="com.novedia.talentmap.web.ui.profile.ProfileView" scope="session">
		<constructor-arg name="collabService" ref="collaboratorService" />
		<constructor-arg name="profileService" ref="profileService" />
		<constructor-arg name="collabForm" ref="collaboratorFormBean" />
		<constructor-arg name="listSkill" ref="listSkillBean" />
		<constructor-arg name="skillPanel" ref="skillPanel"/>
		<constructor-arg name="listSkillPanel" ref="listSkillPanel"/>
		<constructor-arg name="skillLabel" ref="skillLabel"/>
		<constructor-arg name="save" ref="save" />
		<constructor-arg name="edit" ref="edit" />
		<constructor-arg name="cancel" ref="cancel" />
		<constructor-arg name="addSkill" ref="addSkill" />
		<constructor-arg name="addSkillPanel" ref="addSkillPanelBean"/>
		<constructor-arg name="bodyLayout" ref="bodyLayout"/>
		<constructor-arg name="footerLayout" ref="footerLayout"/>
	</bean>
	
	
	<!-- Vaadin CollabView UI -->
	
	<bean id="collabViewBean" class="com.novedia.talentmap.web.ui.collab.CollabView" scope="session" />
	
	
	<!-- Vaadin AdminView UI -->
	
	<bean id="hSplitContent" class="com.vaadin.ui.HorizontalSplitPanel"/>
	
	<bean id="adminViewBean" class="com.novedia.talentmap.web.ui.admin.AdminView" scope="session">
		<constructor-arg name="adminNav" ref="adminNavigationBean" />
		<constructor-arg name="manageSkillContent" ref="manageSkillContentBean" />
		<constructor-arg name="hSplitContent" ref="hSplitContent" />
	</bean>
	
	
	<!-- Vaadin NavigationLink UI -->
	
	<bean id="addSkillButton" class="com.vaadin.ui.Button"/>
	<bean id="visualizeSkill" class="com.vaadin.ui.Button"/>
	<bean id="deleteCollab" class="com.vaadin.ui.Button"/>
	
	<bean id="adminNavigationBean" class="com.novedia.talentmap.web.ui.admin.AdminNavigation" scope="session" >
		<constructor-arg name="visualizeSkill" ref="visualizeSkill" />
		<constructor-arg name="deleteCollab" ref="deleteCollab" />
		<constructor-arg name="addSkill" ref="addSkillButton" />
	</bean>
	
	
	<!-- Vaadin AddSkillContent UI -->
	
	<bean id="formSkill" class="com.vaadin.ui.Form"/>
	<bean id="treeSkill" class="com.vaadin.ui.Tree"/>
	<bean id="adminSaveSkill" class="com.vaadin.ui.Button"/>
	<bean id="adminEditSkill" class="com.vaadin.ui.Button"/>
	<bean id="adminDeleteSkill" class="com.vaadin.ui.Button"/>
	<bean id="adminCancelSkill" class="com.vaadin.ui.Button"/>
	<bean id="listTool" class="java.util.ArrayList"/>
	<bean id="listConcept" class="java.util.ArrayList"/>
	<bean id="listCategory" class="java.util.ArrayList"/>
	<bean id="fieldOrderSkill" class="java.util.Vector"/>
	<bean id="adminTitle" class="com.vaadin.ui.Label"/>
	<bean id="adminBody" class="com.vaadin.ui.HorizontalLayout"/>
	
	
	<bean id="manageSkillContentBean" class="com.novedia.talentmap.web.ui.admin.ManageSkillContent">
		<constructor-arg name="formSkill" ref="formSkill" />
		<constructor-arg name="treeSkill" ref="treeSkill" />
		<constructor-arg name="save" ref="adminSaveSkill" />
		<constructor-arg name="edit" ref="adminEditSkill" />
		<constructor-arg name="delete" ref="adminDeleteSkill" />
		<constructor-arg name="cancel" ref="adminCancelSkill" />
		<constructor-arg name="listTool" ref="listTool" />
		<constructor-arg name="listConcept" ref="listConcept" />
		<constructor-arg name="listCategory" ref="listCategory" />
		<constructor-arg name="adminService" ref="adminService" />
		<constructor-arg name="fieldOrderSkill" ref="fieldOrderSkill" />
		<constructor-arg name="title" ref="adminTitle" />
		<constructor-arg name="body" ref="adminBody" />
	</bean>
	
	<!-- Vaadin AdminContentLayout UI -->
	

	
	<bean id="adminContentLayoutBean" class="com.novedia.talentmap.web.ui.admin.AdminContentLayout" scope="session" >
	</bean>
	
	
	
	<!-- Vaadin TabProfileSheet UI -->
	
	<bean id="tabProfileSheetBean" class="com.novedia.talentmap.web.ui.TabProfileSheet" scope="session" >
		<constructor-arg name="profileView" ref="profileViewBean" />
		<constructor-arg name="collabView" ref="collabViewBean" />
		<constructor-arg name="adminView" ref="adminViewBean" />
	</bean>
	
	
	<!-- Vaadin TabMain UI -->
	
	<bean id="vLayoutTabMain" class="com.vaadin.ui.VerticalLayout" scope="session" />
	
	<bean id="tabMain" class="com.novedia.talentmap.web.ui.TabMain" scope="session" >
		<constructor-arg name="tabProfileSheet" ref="tabProfileSheetBean" />
		<constructor-arg name="tabSearch" ref="vLayoutTabMain" />
	</bean>
	
	
</beans>
