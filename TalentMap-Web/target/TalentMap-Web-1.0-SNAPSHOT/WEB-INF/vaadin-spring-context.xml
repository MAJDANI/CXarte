<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- TalentMap Services import -->
    <import resource="classpath:services-spring-context.xml"/>
    
    <!-- Vaddin root application declaration -->    
    <bean id="vaadinBean" 
          class="com.novedia.talentmap.web.MyVaadinApplication" 
          p:window-ref="windowBean"
          p:button-ref="buttonBean"
          p:tmService-ref="tmServiceBean" 
          scope="session"
    />
	
	<!-- Vaddin component declaration -->
	<bean id="windowBean" 
          class="com.vaadin.ui.Window"
    />
    
	<bean id="buttonBean" 
          class="com.vaadin.ui.Button" 
    />
	
</beans>
