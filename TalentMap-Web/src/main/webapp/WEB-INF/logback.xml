<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

	<jmxConfigurator />

	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

	<appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p - %X{username} - %c:%L -
				%m%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE_APPENDER"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>c:/logs/talentMap_APP.log</file>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>10MB</maxFileSize>
		</triggeringPolicy>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>c:/logs/pol_APP.log.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>20</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p - %X{username} - %c:%L -
				%m%n</pattern>
		</encoder>
	</appender>

	<!-- <appender name="SOCKET_APPENDER" class="ch.qos.logback.classic.net.SocketAppender"> -->
	<!-- <remoteHost>localhost</remoteHost> -->
	<!-- <port>8887</port> -->
	<!-- <includeCallerData>false</includeCallerData> -->
	<!-- </appender> -->

	<root level="WARN">
		<appender-ref ref="CONSOLE_APPENDER" />
		<!--<appender-ref ref="FILE_APPENDER" /> -->
	</root>

	<logger name="Trace" level="DEBUG" />
	<logger name="Application" level="DEBUG" />
	<logger name="org.apache.commons" level="INFO" />
	<logger name="com.ibatis" level="DEBUG" />
	<logger name="org.spring" level="DEBUG" />
	<logger name="com.novedia.talentmap.web" level="DEBUG" />
	<logger name="org.spring" level="DEBUG" />

	<appender name="CONSOLE_ERROR_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p - %X{username} - %c:%L -
				%m%n</pattern>
		</encoder>
		<target>System.err</target>
	</appender>

</configuration>
