<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- TalentMap Services import -->
	<import resource="classpath:services-spring-context.xml" />
	<import resource="classpath:model-spring-context.xml" />


	<bean id="view" class="com.vaadin.ui.VerticalLayout" scope="session" />

	<bean id="talentMapBean" class="com.novedia.talentmap.web.TalentMapApplication" scope="session">
		<property name="view" ref="view" />
		<property name="loginScreen" ref ="loginScreen" />
		
	
	</bean>	
	
	
	<bean id="loginPanel" class="com.vaadin.ui.Panel" scope="session" />
	<bean id="loginField" class="com.vaadin.ui.TextField" scope="session" />
	<bean id="passwordField" class="com.vaadin.ui.PasswordField" scope="session" />
	<bean id="logInButton" class="com.vaadin.ui.Button" scope="session" />
	<bean id="sigIn" class="com.vaadin.ui.Button" scope="session" />
	<bean id="errorLogin" class="com.vaadin.ui.Label" scope="session" />
	<bean id="loginFormLayout" class="com.vaadin.ui.GridLayout" scope="session" />
	
	<bean id="registrationPanel" class="com.vaadin.ui.Panel" scope="session" />
	<bean id="title" class="com.vaadin.ui.OptionGroup" scope="session" />
	<bean id="nameField" class="com.vaadin.ui.TextField" scope="session" />
	<bean id="firstNameField" class="com.vaadin.ui.TextField" scope="session" />
	<bean id="loginField2" class="com.vaadin.ui.TextField" scope="session" />
	<bean id="passwordField2" class="com.vaadin.ui.PasswordField" scope="session" />
	<bean id="confirmPasswordField" class="com.vaadin.ui.PasswordField" scope="session" />
	<bean id="emailField" class="com.vaadin.ui.TextField" scope="session" />
	<bean id="phoneField" class="com.vaadin.ui.TextField" scope="session" />
	<bean id="dateField" class="com.vaadin.ui.PopupDateField" scope="session" />
	<bean id="jobField" class="com.vaadin.ui.ComboBox" scope="session" />
	<bean id="experienceField" class="com.vaadin.ui.TextField" scope="session" />
	<bean id="businessEngineerField" class="com.vaadin.ui.ComboBox" scope="session" />
	<bean id="managerField" class="com.vaadin.ui.ComboBox" scope="session" />
	
	<bean id="loginScreen" class="com.novedia.talentmap.web.login.LoginScreen" scope="session">
	
		<property name="loginPanel" ref="loginPanel" />
		<property name="loginFormLayout" ref="loginFormLayout" />
		<property name="loginField" ref="loginField" />
		<property name="passwordField" ref="passwordField" />
		<property name="logInButton" ref="logInButton" />
		<property name="sigIn" ref="sigIn" />
		<property name="errorLogin" ref="errorLogin" />
		<property name="authenticationService" ref="authenticationService" />
		<property name="authenticatedScreen" ref="authenticatedScreen" />
		<property name="registrationScreen" ref ="registrationScreen" />
		
	</bean>
	
	
	<bean id="logOutButton" class="com.vaadin.ui.Button" scope="session" />
	<bean id="authenticatedScreen" class="com.novedia.talentmap.web.login.AuthenticatedScreen" scope="session">
		<property name="logOutButton" ref="logOutButton" />
	</bean>
	
	<bean id="registrationScreen" class="com.novedia.talentmap.web.registration.RegistrationScreen" scope="session">
		<property name="registrationPanel" ref="registrationPanel" />
		<property name="registrationForm" ref="registrationForm" />
		<property name="authenticationService" ref="authenticationService" />
		<property name="registrationService" ref="registrationService" />
	</bean>
	
	
	<bean id="registrationForm" class="com.novedia.talentmap.web.registration.RegistrationForm" scope="session">
		<property name="colleagueService" ref="collaboratorService" />
		<property name="registrationService" ref="registrationService" />
		<property name="title" ref="title" />
		<property name="nameField" ref="nameField" />
		<property name="firstNameField" ref="firstNameField" />
		<property name="passwordField" ref="passwordField2" />
		<property name="confirmPasswordField" ref="confirmPasswordField" />
		<property name="loginField" ref="loginField2" />
		<property name="emailField" ref="emailField" />
		<property name="phoneField" ref="phoneField" />
		<property name="dateField" ref="dateField" />
		<property name="jobField" ref="jobField" />
		<property name="experienceField" ref="experienceField" />
		<property name="businessEngineerField" ref="businessEngineerField" />
		<property name="managerField" ref="managerField" />
	</bean>
	
</beans>
