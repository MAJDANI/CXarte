<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- DAO bean declaration import -->
	<import resource="classpath:store-spring-context.xml"/>
	
	<!-- Service beans declaration -->
	<bean id="collaboratorService" class="com.novedia.talentmap.services.impl.ColleagueService">
		 <property name="colleagueDao" ref="colleagueDao"/>
		 <property name="missionDao" ref="missionDao"/>
	</bean>
    
    <bean id="profileService" class="com.novedia.talentmap.services.impl.ProfileService">
		<property name="profileDao" ref="profileDao"/>
	</bean>
	
	<bean id="skillService" class="com.novedia.talentmap.services.impl.SkillService">
		<property name="skillDao"        ref="skillDao"/>
		<property name="toolDao"         ref="toolDao"/>
		<property name="conceptDao"      ref="conceptDao"/>
		<property name="categoryDao"     ref="categoryDao"/>
		<property name="vSkillDao"       ref="vSkillDao"/>
		<property name="vSkillCollabDao" ref="vSkillCollabDao" />
	</bean>
	
	<bean id="mapNotification" class="java.util.HashMap" />
	
	<bean id="adminService" class="com.novedia.talentmap.services.impl.AdminService">
		<property name="toolDao" ref="toolDao"/>
		<property name="conceptDao" ref="conceptDao"/>
		<property name="categoryDao" ref="categoryDao"/>
		<property name="vSkillDao" ref="vSkillDao"/>
		<property name="mapNotification" ref="mapNotification" />
	</bean>

	<bean id="managerService" class="com.novedia.talentmap.services.impl.ManagerService">
		<property name="managerDao" ref="managerDao"/>
		<property name="colleagueDao" ref="colleagueDao"/>
	</bean>
	
	<bean id="authenticationService" class="com.novedia.talentmap.services.impl.AuthenticationService">
		<property name="authenticationDao" ref="authenticationDao"/>
	</bean>
	
</beans>
